// NewsAnalyzer.jsx
import React, { useState } from "react";
import axios from "axios";

const API_KEY = "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";

async function analyzeNewsWithAI(newsContent) {
  try {
    const response = await axios.post(
      "https://openrouter.ai/api/v1/chat/completions",
      {
        model: "gryphe/mythomax-l2-13b",
        messages: [
          {
            role: "system",
            content: "ä½ æ˜¯ä¸€ä¸ªèªæ˜çš„æ–°é—»åˆ†æåŠ©æ‰‹ï¼Œè¯·é˜…è¯»ä»¥ä¸‹å†…å®¹å¹¶åšå‡ºæ¸…æ™°å‡†ç¡®çš„åˆ†æã€‚",
          },
          {
            role: "user",
            content: newsContent,
          },
        ],
      },
      {
        headers: {
          Authorization: `Bearer ${API_KEY}`,
          "Content-Type": "application/json",
        },
      }
    );

    return response.data.choices[0].message.content;
  } catch (error) {
    console.error("AIåˆ†æå‡ºé”™ï¼š", error);
    return "åˆ†æå¤±è´¥ï¼Œè¯·ç¨åå†è¯•ã€‚";
  }
}

export default function NewsAnalyzer() {
  const [newsText, setNewsText] = useState("è¿™æ˜¯æ–°é—»å†…å®¹â€¦â€¦");
  const [aiResult, setAiResult] = useState("");
  const [loading, setLoading] = useState(false);

  const handleAnalyze = async () => {
    setLoading(true);
    const result = await analyzeNewsWithAI(newsText);
    setAiResult(result);
    setLoading(false);
  };

  return (
    <div className="p-4 max-w-2xl mx-auto">
      <h1 className="text-2xl font-bold mb-4">ğŸ“° æ–°é—» AI åˆ†æåŠ©æ‰‹</h1>
      <textarea
        className="w-full h-32 p-2 border rounded"
        placeholder="ç²˜è´´æ–°é—»å†…å®¹"
        value={newsText}
        onChange={(e) => setNewsText(e.target.value)}
      ></textarea>
      <button
        onClick={handleAnalyze}
        disabled={loading}
        className="mt-4 px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600"
      >
        {loading ? "åˆ†æä¸­..." : "è®© AI åˆ†æ"}
      </button>
      {aiResult && (
        <div className="bg-gray-100 p-4 mt-4 rounded">
          <h2 className="font-semibold mb-2">ğŸ” AI åˆ†æç»“æœï¼š</h2>
          <p>{aiResult}</p>
        </div>
      )}
    </div>
  );
}
